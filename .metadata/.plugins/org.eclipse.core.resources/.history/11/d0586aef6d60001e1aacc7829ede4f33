#include "software_timer.h"
int timer1_counter = 0;
int timer1_flag;
void setTimer1(int duration){
	timer_counter = duration;
	timer1_flag = 0;
}
void timerRun(){
	if (timer1_counter > 0){
		timer1_counter--;
		if(timer1_counter <= 0){
			timer1_flag =1;
			HAL_GPIO_TogglePin ( LED_RED_GPIO_Port , LED_RED_Pin ) ;
			update7SEG(index_led++);
			if(index_led == MAX_LED) index_led = 0;
		}
	}
}

